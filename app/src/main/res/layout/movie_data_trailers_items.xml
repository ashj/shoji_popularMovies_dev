<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:layout_marginEnd="@dimen/act_movie_data_body_text_paddingRight"
    android:layout_marginStart="@dimen/act_movie_data_body_text_paddingLeft">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/movie_data_trailers_constraint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

    android:background="@drawable/movie_trailer_list_selector"
    android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/movie_trailer_icon_image_view"
            android:layout_width="@dimen/act_movie_data_trailer_icon_size"
            android:layout_height="@dimen/act_movie_data_trailer_icon_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_play_button"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <TextView
            android:id="@+id/movie_trailer_title_tv"
            style="@style/MovieDetailsTrailerListStyle"
            app:layout_constraintStart_toEndOf="@+id/movie_trailer_icon_image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/tools_trailer_tile" />



    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>