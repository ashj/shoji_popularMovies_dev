<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MovieDetailsGeneralStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/act_movie_data_text_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/act_movie_data_text_paddingRight</item>
    </style>

    <style name="MovieDetailsLabelStyle" parent="MovieDetailsGeneralStyle">
        <item name="android:textSize">@dimen/act_movie_data_heading_font_size</item>
    </style>

    <style name="MovieDetailsLabelStyle2" parent="MovieDetailsLabelStyle">
        <item name="android:paddingTop">@dimen/act_movie_data_text_paddingTop</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieDetailsBodyStyle" parent="MovieDetailsGeneralStyle">
        <item name="android:textSize">@dimen/act_movie_data_text_font_size</item>
        <item name="android:paddingStart">@dimen/act_movie_data_body_text_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/act_movie_data_body_text_paddingRight</item>
    </style>


    <style name="MovieDetailsTrailerListStyle" parent="MovieDetailsGeneralStyle">
        <item name="android:paddingStart">@dimen/act_movie_data_trailer_text_paddingLeft</item>
        <item name="android:paddingEnd">@dimen/act_movie_data_trailer_text_paddingRight</item>
        <item name="android:textSize">@dimen/act_movie_data_trailer_font_size</item>
        <item name="android:paddingTop">@dimen/act_movie_data_trailer_list_padding</item>
        <item name="android:paddingBottom">@dimen/act_movie_data_trailer_list_padding</item>
    </style>

</resources>
